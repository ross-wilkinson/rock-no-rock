file = {:Users/rosswilkinson/Documents/Mendeley Library/Honeine et al.{\_}2014{\_}By counteracting gravity, triceps surae sets both kinematics and kinetics of gait.pdf:pdf},
isbn = {2051-817X (Electronic)$\backslash$r2051-817X (Linking)},

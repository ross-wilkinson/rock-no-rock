file = {:Users/rosswilkinson/Documents/Mendeley Library/Daly, Bini, Kingsley{\_}2018{\_}Changes in body position on the bike during sprint cycling applications to bike fitting bike fitting.pdf:pdf},
issn = {15367290},
journal = {European Journal of Sport Science},
keywords = {Cyclists,bike set up,joint kinematics},
pages = {782--785},
title = {{Changes in body position on the bike during seated sprint cycling: Applications to bike fitting}},
year = {2019}
}

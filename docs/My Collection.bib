number = {6},
pages = {3283--3295},
title = {{Muscle coordination limits efficiency and power output of human limb movement under a wide range of mechanical demands}},
url = {http://jn.physiology.org/content/114/6/3283.abstract},
volume = {114},
year = {2015}
}

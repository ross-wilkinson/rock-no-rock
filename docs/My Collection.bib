doi = {10.1249/mss.0b013e31802b3562},
file = {:Users/rosswilkinson/Documents/Mendeley Library/Browning et al.{\_}2007{\_}The effects of adding mass to the legs on the energetics and biomechanics of walking.pdf:pdf},
isbn = {0195-9131 (Print)},
issn = {01959131},
journal = {Medicine and Science in Sports and Exercise},
keywords = {Electromyography,Leg loading,Load carriage,Locomotion,Metabolic rate},
number = {3},
pages = {515--525},
pmid = {17473778},
title = {{The effects of adding mass to the legs on the energetics and biomechanics of walking}},

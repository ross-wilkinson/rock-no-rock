keywords = {AGING,BLOOD LACTATE,COPD,DISEASE,EXERCISE INTOLERANCE,HEART FAILURE,HYPEROXIA,HYPOXIA,MUSCLE METABOLITES,PULMONARY GAS EXCHANGE,VASCULAR CONTROL},

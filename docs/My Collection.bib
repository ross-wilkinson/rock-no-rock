issn = {00220949},
journal = {Journal of Experimental Biology},
keywords = {Aerodynamics,Bat,Bird,Efficiency,Flight,Gait,Power,Thermography,Vorticity,Wingbeat kinematics},
number = {23},
pages = {3449--3461},
pmid = {10562528},
title = {{Estimating power curves of flying vertebrates}},

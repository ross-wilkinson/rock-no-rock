isbn = {1873-5711 (Electronic)$\backslash$n1050-6411 (Linking)},
issn = {10506411},
journal = {Journal of Electromyography and Kinesiology},
number = {1},
pmid = {23022477},
title = {{Inter- and intra-session reliability of muscle activity patterns during cycling}},
volume = {23},
year = {2013}

journal = {Journal of Biomechanics},
keywords = {Biomechanics,Multivariate statistics,Random field theory,Statistical parametric mapping},
number = {14},
pages = {2394--2401},
pmid = {23948374},
publisher = {Elsevier},
title = {{Vector field statistical analysis of kinematic and force trajectories}},
url = {http://dx.doi.org/10.1016/j.jbiomech.2013.07.031},

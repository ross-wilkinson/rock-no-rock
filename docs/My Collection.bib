journal = {Procedia Engineering},
keywords = {Cycling,Inertia,Lower limbs,Modelling},
number = {July 2015},
pages = {232--237},
title = {{Three ways of assessing the inertial biomechanics of a cyclist's leg}},
volume = {72},
year = {2014}
}

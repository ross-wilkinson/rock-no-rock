doi = {10.1080/02640414.2014.977934},
file = {:Users/rosswilkinson/Documents/Mendeley Library/Gilgien et al.{\_}2015{\_}Determination of the centre of mass kinematics in alpine skiing using differential global navigation satellite syste.pdf:pdf},
isbn = {0264-0414},
issn = {02640414 (ISSN)},
journal = {Journal of Sports Sciences},
keywords = {GPS and GNSS,alpine skiing,position–velocity–acceleration,technical validation,video-based 3D kinematics},
number = {9},
pages = {960--969},
pmid = {25565042},
title = {{Determination of the centre of mass kinematics in alpine skiing using differential global navigation satellite systems}},

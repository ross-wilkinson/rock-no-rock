file = {:Users/rosswilkinson/Documents/Mendeley Library/jn.00850.2016.pdf:pdf},
issn = {15221598},
journal = {Journal of Neurophysiology},
keywords = {Motoneuron pool,Motor unit discharge,Persistent inward current},
number = {3},
pages = {1171--1184},
title = {{Synaptic control of the shape of the motoneuron pool input-output function}},
volume = {117},
year = {2017}
}

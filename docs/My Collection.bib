issn = {1179-1543},
journal = {Open Access Journal of Sports Medicine},
keywords = {age,body fat,cycling,running,sex,swimming},
pages = {277},
title = {{Variables that influence Ironman triathlon performance {\&}ndash; what changed in the last 35 years?}},

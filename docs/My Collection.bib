journal = {Medicine and Science in Sports and Exercise},
keywords = {CENTRAL FATIGUE,MONOAMINERGIC,MOTONEURON,MOTOR CORTEX,MOTOR UNIT,MUSCLE AFFERENT},
number = {11},
pages = {2294--2306},
pmid = {27003703},
title = {{Neural contributions to muscle fatigue: From the brain to the muscle and back again}},

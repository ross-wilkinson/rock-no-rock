file = {:Users/rosswilkinson/Documents/Mendeley Library/jn.00872.2017.pdf:pdf},
issn = {15221598},
journal = {Journal of Neurophysiology},
keywords = {Effort,Reaching movements,Reward,Variability,Vigor},
number = {6},
pages = {2347--2357},
title = {{Vigor of reaching movements: Reward discounts the cost of effort}},
volume = {119},
